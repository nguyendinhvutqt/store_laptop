<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/user/head') -%>
    <title>Home</title>
  </head>
  <body>
    <%- include('../partials/user/header') -%>

    <!-- Slider Area -->
    <section class="hero-slider">
      <!-- Single Slider -->
      <div class="single-slider">
        <div class="container">
          <div class="row no-gutters">
            <div class="col-lg-9 offset-lg-3 col-12">
              <div class="text-inner">
                <div class="row">
                  <div class="col-lg-7 col-12">
                    <div class="hero-text">
                      <h1>LAPTOP STORE</h1>
                      <div class="button">
                        <a href="/products" class="btn">Shop Now!</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!--/ End Single Slider -->
    </section>
    <!--/ End Slider Area -->

    <!-- Start Small Banner  -->
    <section class="small-banner section">
      <div class="text-center">
        <h2>SẢN PHẨM MỚI</h2>
      </div>
      <div class="container-fluid mt-4">
        <div class="row">
          <% if (newProducts) { newProducts.forEach( (product) => { %>
          <!-- Single Banner  -->
          <div class="col-lg-4 col-md-6 col-12">
            <div
              style="
                position: relative;
                border: 1px solid #ccc;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
                transition: box-shadow 0.3s ease;
              "
              class="single-banner border"
            >
              <span
                style="
                  padding: 5px 10px;
                  background-color: #8493ca;
                  border-radius: 10px;
                  float: right;
                  position: absolute;
                  top: 0;
                  right: 0;
                "
                class="new"
                >New</span
              >
              <img src="/images/products/<%- product.image %>" alt="image" />
              <div class="content text-center pl-0">
                <h3 class="bg-light truncate"><%- product.name %></h3>
                <a class="bg-warning p-2" href="/product/<%- product._id %>"
                  >Xem ngay</a
                >
              </div>
            </div>
          </div>
          <!-- /End Single Banner  -->
          <% }) }%>
        </div>
      </div>
    </section>
    <!-- End Small Banner -->

    <!-- Start Product Area -->
    <div class="container">
      <div class="d-flex justify-content-center mt-5">
        <h2>SẢN PHẨM BÁN CHẠY</h2>
      </div>
      <div class="row pb-2">
        <div class="col-12">
          <div class="product-info">
            <!-- Start Single Tab -->
            <div class="tab-single">
              <div class="row">
                <% if (products) { function formatCurrency(number) { return new
                Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND'
                }).format(number); } products.forEach( (item) => { %>
                <div class="col-xl-3 col-lg-4 col-md-4 col-12">
                  <div
                    class="single-product"
                    style="
                      border: 1px solid #ccc;
                      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
                      transition: box-shadow 0.3s ease;
                    "
                  >
                    <div class="product-img">
                      <a href="/product/<%- item._id %>">
                        <img
                          class="default-img"
                          style="width: 100%; height: 200px"
                          src="/images/products/<%- item.image %>"
                          alt="#"
                        />
                        <img
                          class="hover-img"
                          style="width: 100%; height: 200px"
                          src="/images/products/<%- item.image %>"
                          alt="#"
                        />
                      </a>
                      <div class="button-head">
                        <form method="post" action="/add-to-cart">
                          <div class="product-action-2">
                            <input
                              type="hidden"
                              name="productId"
                              value="<%- item._id %>"
                            />
                            <button type="submit">Thêm vào giỏ hàng</button>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                  <div
                    style="
                      background-color: #cccccc;
                      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
                      transition: box-shadow 0.3s ease;
                    "
                    class="product-content"
                  >
                    <h5 class="p-3">
                      <a class="truncate" href="/product/<%- item._id %>"
                        ><%-item.name%></a
                      >
                    </h5>
                    <div class="product-price">
                      <span class="pl-3 pb-3"
                        ><%-formatCurrency(item.price)%></span
                      >
                    </div>
                  </div>
                </div>
                <% }) } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../partials/user/footer') -%>
    <!-- End Product Area -->
    <%- include('../partials/user/js') -%>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/user/head') -%>
    <title>Sản phẩm</title>
  </head>
  <body>
    <%- include('../partials/user/header') -%> <% function
    formatCurrency(number) { return new Intl.NumberFormat('vi-VN', { style:
    'currency', currency: 'VND' }).format(number); }; let sumMoney = 0; %>
    <div class="d-flex justify-content-center p-4">
      <div class="col-lg-3">
        <div class="p-3">
          <div class="list-group">
            <h4
              style="background-color: #f7941d"
              class="text-center p-3 text-white"
            >
              Nhãn hiệu
            </h4>
            <% if (categories) { categories.forEach( (category) => { %>
            <a
              href="/products?type=<%- category.name %>"
              class="list-group-item list-group-item-action"
              ><%- category.name %></a
            >
            <% }) } %>
            <a
              href="/products?type="
              class="list-group-item list-group-item-action"
              >Tất cả</a
            >
          </div>
          <form style="border: 1px solid #ccc" class="list-group mt-4">
            <h4
              style="background-color: #f7941d"
              class="text-center p-3 text-white"
            >
              Phạm vi giá
            </h4>
            <div class="text-center mt-4">
              <input
                style="width: 100px"
                type="text"
                name="min"
                placeholder="Min"
              />
              <label for="">--></label>
              <input
                style="width: 100px"
                type="text"
                name="max"
                placeholder="Max"
              />
            </div>
            <button
              style="
                padding: 15px 0;
                margin-top: 10px;
                background-color: #333333;
                color: #fff;
              "
              type="submit"
            >
              Tìm
            </button>
          </form>
        </div>
      </div>
      <div class="col-lg-9">
        <div class="text-center">
          <% if (message) { %>
          <h4 class="p-4"><%- message %></h4>
          <% } %>
        </div>
        <div class="row">
          <% if (products) { products.forEach( (item) => { %>
          <div class="col-xl-3 col-lg-4 col-md-4 col-12">
            <div
              class="single-product"
              style="
                border: 1px solid #ccc;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
                transition: box-shadow 0.3s ease;
              "
            >
              <div class="product-img">
                <a href="/product/<%- item._id %>">
                  <img
                    class="default-img"
                    style="width: 100%; height: 200px"
                    src="/images/products/<%- item.image %>"
                    alt="#"
                  />
                  <img
                    class="hover-img"
                    style="width: 100%; height: 200px"
                    src="/images/products/<%- item.image %>"
                    alt="#"
                  />
                </a>
                <div class="button-head">
                  <form method="post" action="/add-to-cart">
                    <div class="product-action-2">
                      <input
                        type="hidden"
                        name="productId"
                        value="<%- item._id %>"
                      />
                      <button type="submit">Thêm vào giỏ hàng</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <div
              style="
                background-color: #cccccc;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
                transition: box-shadow 0.3s ease;
              "
              class="product-content"
            >
              <h5 class="p-3">
                <a class="truncate" href="/product/<%- item._id %>"
                  ><%-item.name%></a
                >
              </h5>
              <div class="product-price">
                <span class="pl-3 pb-3"><%-formatCurrency(item.price)%></span>
              </div>
            </div>
          </div>
          <% }) } %>
        </div>
      </div>
    </div>
    <%- include('../partials/user/footer') -%> <%-
    include('../partials/user/js') -%>
  </body>
</html>
